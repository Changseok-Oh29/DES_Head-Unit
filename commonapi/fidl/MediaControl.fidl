package mediacontrol

interface MediaControl {
    version { major 1 minor 0 }
    
    // RPC Methods
    method getVolume {
        out {
            Float volume
        }
    }
    
    method setVolume {
        in {
            Float volume
        }
    }
    
    // Broadcast Events  
    broadcast volumeChanged {
        out {
            Float newVolume
        }
    }
}