[Unit]
Description=WiFi Auto Connect
After=network.target wpa_supplicant.service
Wants=wpa_supplicant.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/sbin/ip link set wlan0 up
ExecStart=/bin/sleep 2
ExecStart=/usr/sbin/wpa_supplicant -B -i wlan0 -c /etc/wpa_supplicant/wpa_supplicant-wlan0.conf
ExecStart=/bin/sleep 3
ExecStart=/usr/sbin/dhcpcd wlan0

[Install]
WantedBy=multi-user.target
